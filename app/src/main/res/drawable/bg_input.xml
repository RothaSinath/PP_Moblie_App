<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Input background color -->
    <solid android:color="#FFFFFF"/>

    <!-- Rounded corners -->
    <corners android:radius="12dp"/>

    <!-- Border stroke -->
    <stroke
        android:width="1.5dp"
        android:color="#27B1AF"/>

    <!-- Inner padding -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>
</shape>